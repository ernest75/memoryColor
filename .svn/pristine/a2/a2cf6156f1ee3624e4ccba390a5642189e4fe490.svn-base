<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference

        android:title="@string/pref_levels_difficulty"
        android:entryValues="@array/pref_levels_difficulty_values"
        android:entries="@array/pref_levels_difficulty_options"
        android:defaultValue="@string/pref_levels_difficulty_default"
        android:key="@string/pref_levels_difficulty_key"

    />

    <SwitchPreference
        android:title="@string/pref_sound_switch_on_off"
        android:key="@string/pref_sound_switch_on_off_key"
        android:defaultValue="true"
        android:summaryOn="@string/pref_sound_switch_on"
        android:summaryOff="@string/pref_sound_switch_off"
        android:switchTextOn="@string/pref_sound_switch_on"
        android:switchTextOff="@string/pref_sound_switch_off"/>



</PreferenceScreen>